<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    tools:context=".RecipeDetailFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="16dp"
        android:paddingTop="16dp"
        android:background="@color/white">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/RecipeDetailHeader"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/btnBack"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/bg_circle"
                android:padding="16dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_back"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/screenTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="88dp"
                android:text="Detail Recipe"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/btnBack"
                app:layout_constraintStart_toEndOf="@id/btnBack"
                app:layout_constraintTop_toTopOf="@id/btnBack" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/content"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:paddingBottom="140dp"
            android:clipToPadding="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/RecipeDetailHeader">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="16dp">

                <TextView
                    android:id="@+id/recipeName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Choco Macarons"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:id="@+id/recipeTimeLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/recipeName">

                    <ImageView
                        android:id="@+id/clockImg"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/clock" />

                    <TextView
                        android:id="@+id/recipeTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="4dp"
                        android:text="10 Min"
                        android:textColor="@color/text_gray"
                        android:textSize="16sp" />

                </LinearLayout>

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/recipeImg"
                    android:layout_width="0dp"
                    android:layout_height="280dp"
                    android:layout_marginTop="16dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/recipeTimeLayout"
                    app:shapeAppearanceOverlay="@style/RecipeImageRound" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/descriptionInfo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/recipeImg">

                    <TextView
                        android:id="@+id/descriptionHeading"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Description"
                        android:textSize="22sp"
                        android:textStyle="normal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <FrameLayout
                        android:id="@+id/descriptionLayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/descriptionHeading">

                        <TextView
                            android:id="@+id/descriptionText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:lineSpacingExtra="2dp"
                            android:maxLines="2"
                            android:ellipsize="end"
                            android:text="Choco Macarons are a delightful blend of dessert. These choco shells are flavored with creamy ganache."
                            android:textColor="@color/text_gray"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/btnSeeMoreDescription"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end|bottom"
                            android:background="@color/white"
                            android:layout_marginEnd="0dp"
                            android:text="See more"
                            android:textColor="@color/dark_gray"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    </FrameLayout>

                    <View
                        android:id="@+id/descriptionDivider"
                        android:layout_width="0dp"
                        android:layout_height="4dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/divider"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/descriptionLayout" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/ingredientInfo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/descriptionInfo">

                    <TextView
                        android:id="@+id/ingredientHeading"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Ingredients"
                        android:textSize="22sp"
                        android:textStyle="normal"
                        app:layout_constraintEnd_toStartOf="@id/icArrowIngredient"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/icArrowIngredient"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_arrow_down"
                        app:layout_constraintBottom_toBottomOf="@id/ingredientHeading"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/ingredientHeading" />

                    <TextView
                        android:id="@+id/ingredientText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:lineSpacingExtra="2dp"
                        android:text="• 200g almond flour\n• 50g cocoa powder\n• 3 egg whites\n• 200g sugar\n• 150ml heavy cream\n• 200g dark chocolate"
                        android:textColor="@color/text_gray"
                        android:textSize="15sp"
                        android:visibility="gone"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/ingredientHeading" />

                    <View
                        android:id="@+id/ingredientDivider"
                        android:layout_width="0dp"
                        android:layout_height="4dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/divider"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/ingredientText" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/directionInfo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/ingredientInfo">

                    <TextView
                        android:id="@+id/directionHeading"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Direction"
                        android:textSize="22sp"
                        android:textStyle="normal"
                        app:layout_constraintEnd_toStartOf="@id/icArrowDirection"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/icArrowDirection"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_arrow_down"
                        app:layout_constraintBottom_toBottomOf="@id/directionHeading"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/directionHeading" />

                    <TextView
                        android:id="@+id/directionText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:lineSpacingExtra="2dp"
                        android:text="1. To make Choco Macarons, start by sifting together almond flour and cocoa powder. Beat egg whites until soft and fluffy.\n\n2. For the ganache, heat heavy cream in a pan, and pour over chocolate in a separate bowl. Pipe onto the shells and gently sandwich them together.\n\n3. Mix the egg whites and sugar until soft peaks form. 1. To make Choco Macarons, start by sifting together almond flour and cocoa powder. Beat egg whites until soft and fluffy.\n\n2. For the ganache, heat heavy cream in a pan, and pour over chocolate in a separate bowl. Pipe onto the shells and gently sandwich them together.\n\n3. Mix the egg whites and sugar until soft peaks form."
                        android:textColor="@color/text_gray"
                        android:textSize="15sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/directionHeading" />

                    <View
                        android:id="@+id/directionDivider"
                        android:layout_width="0dp"
                        android:layout_height="4dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/divider"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/directionText" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <FrameLayout
        android:id="@+id/cardWatchVideo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:background="@drawable/bg_blur"
        app:cardElevation="8dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnWatchVideo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="24dp"
            android:background="@drawable/btn_bg"
            android:paddingHorizontal="32dp"
            android:paddingVertical="12dp"
            android:text="Watch Video"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </FrameLayout>

</FrameLayout>