<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="224dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="4dp"
    android:layout_marginTop="4dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="4dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="0dp"
    app:strokeWidth="0dp"
    app:strokeColor="@android:color/transparent"
    app:useCompatPadding="false"
    app:cardPreventCornerOverlap="false"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/imageLayout"
            android:layout_width="match_parent"
            android:layout_height="248dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/ivRecipeImg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="Recipe Image"
                android:scaleType="centerCrop"
                android:src="@drawable/img_2"
                app:shapeAppearanceOverlay="@style/RecipeImageRound" />

            <TextView
                android:id="@+id/tvCookTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_time"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:text="30 Min"
                android:textColor="@color/white" />


            <ImageView
                android:id="@+id/ivFavorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_heart_outline"
                android:layout_marginStart="180dp"
                android:layout_marginTop="210dp"
                android:contentDescription="Add to favorites"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="2dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tvRecipeName"
                app:layout_constraintBottom_toBottomOf="@id/tvRecipeName" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="2dp">

            <TextView
                android:id="@+id/tvRecipeName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recipe Name"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvRecipeProcess"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Recipe process"
                android:textColor="@color/grey"
                android:textSize="14sp"
                android:maxLines="2"
                android:ellipsize="end" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>